<ul>
  <% if(groupedMessages && Object.keys(groupedMessages).length> 0) { %>
    <strong>Grouped Messages</strong>
    <% Object.keys(groupedMessages).forEach(threadId=> { %>
      <li>
        <strong>Thread ID: <%= threadId %></strong>
        <% groupedMessages[threadId].forEach(message=> { %>
          <ul>
            <li>
              <%= message.subject %> From: <%= message.from.emailAddress.address %> To: <%= message.toRecipients.map(recipient => recipient.emailAddress.address).join(', ') %>
            </li>
          </ul>
          <% }); %>
      </li>
      <% }); %>
        <% } %> <!-- Close the if block -->
</ul> <!-- Close the ul -->


